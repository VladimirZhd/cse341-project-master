<% include ../includes/header-b4.ejs %> 
  </head>
  <body>
    <% include ../includes/nav.ejs %> 
    <div class="container">
      <h1>Add new Book</h1>
      <form action="/pr02/addBook" method="POST" class="form-group">
        <label for="bookTitle">Title</label>
        <input
          type="text"
          id="bookTitle"
          name="bookTitle"
          class="form-control"
        />
        <label for="summary">Summary</label>
        <textarea
          type="text"
          id="summary"
          name="summary"
          class="form-control"
        ></textarea>
        <label for="author">Author</label>
        <input type="text" id="author" name="author" class="form-control" />
        <label for="year">Year</label>
        <input type="text" id="year" name="year" class="form-control" />
        <button class="btn btn-primary my-2">Submit</button>
        <% if (empty) {%>
        <div class="alert alert-warning">All fields are required</div>
        <% } %>
      </form>
    </div>
    <div class="container my-2">
      <div class="row">
        <div class="col-sm-12">
          <% if (books.length <= 0) { %>
          <h1>No books Found</h1>
          <% } %> <% for (let book of books) { %>
          <div class="card mb-2">
            <div class="card-header"><h3><%= book.bookTitle %></h3></div>
            <div class="card-body">
              <h4 class="card-title"><%= book.author %></h4>
              <p class="card-text"><%= book.summary %></p>
            </div>
            <div class="card-footer text-muted"><%= book.year %></div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
